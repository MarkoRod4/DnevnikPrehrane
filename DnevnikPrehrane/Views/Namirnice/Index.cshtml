@model IEnumerable<DnevnikPrehrane.Models.Namirnica>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label for="searchString" class="form-label">Search</label>
            <input type="text" name="searchString" id="searchString"
                   value="@Context.Request.Query["searchString"]"
                   class="form-control" />
        </div>

        <div class="col-md-4">
            <label for="kategorijaId" class="form-label">Kategorija</label>
            <select name="kategorijaId" id="kategorijaId"
                    asp-items="ViewBag.KategorijaId"
                    class="form-select">
                <option value="">Sve kategorije</option>
            </select>
        </div>

        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>
</form>


<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kalorije)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Protein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ugljikohidrati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masti)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kalorije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Protein)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ugljikohidrati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Masti)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NamirnicaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NamirnicaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NamirnicaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
