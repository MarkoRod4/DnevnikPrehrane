@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Korisnici";
}

<h1>Korisnici</h1>

<table class="table">
    <thead>
        <tr>
            <th>Korisničko ime (Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
