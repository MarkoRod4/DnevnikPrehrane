@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Detalji korisnika";
}

<h1>Detalji korisnika</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Korisničko ime</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
    </dl>
</div>

<hr />

<h3>Pregled zapisa</h3>
<p>
    <a asp-controller="ZapisiMase" asp-action="Index" asp-route-userId="@Model.Id" class="btn btn-outline-secondary">Zapisi mase</a>
    <a asp-controller="Obroci" asp-action="Index" asp-route-userId="@Model.Id" class="btn btn-outline-secondary">Obroci</a>
    <a asp-controller="Biljeske" asp-action="Index" asp-route-userId="@Model.Id" class="btn btn-outline-secondary">Bilješke</a>
</p>

<a asp-action="Index" class="btn btn-link">Back to list</a>
