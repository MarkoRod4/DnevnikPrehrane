@model IEnumerable<DnevnikPrehrane.Models.ZapisMase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("USER"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Masa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Masa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                @if (User.IsInRole("USER"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ZapisMaseId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ZapisMaseId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ZapisMaseId">Delete</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ZapisMaseId">Details</a>
                    </td>
                }

        </tr>
}
    </tbody>
</table>
